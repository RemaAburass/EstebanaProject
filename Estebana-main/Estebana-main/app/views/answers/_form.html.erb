<body class="bg-ques">
  <section class=" px-10 ">
    <div class="container py-5 h-100 ">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-8">
          <div class="card rounded-3">
            <div class="row g-0">
              <div class="col card-body gradient-custom-2 text-white text-center"> 
                <div class="">
                  <%= image_tag "covid2.png" %>
                </div>
                <h1 class="mt-1 mb-5 pb-1 text-center" style="font-family: 'Acme', sans-serif;">Question</h1>
              </div>
            </div>
            <div class="row g-0">
              <div class="col card-body"> 
                <%= form_with(model: answer) do |form| %>
                  <% if answer.errors.any? %>
                    <div class="border border-danger bg-danger m-2" id="error_explanation">
                      <h2 class="pt-2 px-2"><%= pluralize(answer.errors.count, "error") %> prohibited this answer from being saved:</h2>
                      <ul>
                        <% answer.errors.each do |error| %>
                          <li><%= error.full_message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>
                <div class="form-outline mb-4">
                  <h4 ><strong>Edit Answer:</strong></h4>
                    <%= form.text_area :content, :class=>"form-control" %>
                </div>
                <hr>
                <div class="actions">
                  <%= form.hidden_field :user_id, value: current_user.id %>
                </div>
                <div>
                  <%=form.submit "Update Answer", :class => "btn btn-sign btn-block fa-lg mb-3 form-control" %> 
                </div>
              </div>
              </div>
            </div>
          </div>
          <%end%>
        </div>
      </div>
    </div>
  </section>
</body>