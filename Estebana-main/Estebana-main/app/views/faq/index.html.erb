<body class="bg-ques">
<section class="section">
	<div class="faq_area section_padding_80" id="faq">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-12 col-sm-8 col-lg-6 mb-4 section_heading text-center">
					<!-- Section Heading-->
					<h2 class="title-color">Frequently Asked Questions</h2>
				</div>
			</div>
			<div class="row justify-content-center">
				<!-- FAQ Area-->
				<div class="accordion accordion-flush" style=" width:70%" id="accordionFlushExample">
					<% @faqs.each_with_index do |faq, index| %>
					<div class="accordion-item" style="border-color:#484848;">
						<h2 class="accordion-header" id="flush-headingOne<%= index %>">
							<button style="background-color:#223C60;" class="text-white accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne<%= index %>" aria-expanded="false" aria-controls="flush-collapseOne<%= index %>"><%= faq.content %>
							</button>
						</h2>
						<div id="flush-collapseOne<%= index %>" class="accordion-collapse collapse" aria-labelledby="flush-headingOne<%= index %>" data-bs-parent="#accordionFlushExample">
							<div class="title-color accordion-body"><%= Answer.where(question_id: faq.id).first.content %> </div>
						</div>
					</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</section>
</body>