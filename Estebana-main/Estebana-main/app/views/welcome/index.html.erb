<section class="banner pt-3 "> <!-- banner in css-->
	<div class="container">
		<div class="row">
			<div class="col-lg-6 col-md-12 ">
				<div class="block"> <!-- block in css--> <!-- .banner .block -->
					<span class="text-uppercase letter-spacing "><br/>Covid-19 Symptoms Monitoring System</span> <!-- .letter-spacing -->
					<h1 class="mb-3 mt-3">Your most trusted health partner</h1> <!-- .banner .block h1-->
					<div class="btn-container">
						<button class="btn btn-main-2 btn-icon btn-round-full">
							<% if current_user.nil? %>
				              <%= link_to ('<span class="text-white">Sign In<i class="fa fa-angle-right ml-2 "></i> </span> ').html_safe, new_user_session_path, method: :get, class: 'nav-link'  %>
				            <% else %>
				              <%= link_to ('<span class="text-white">Sign Out<i class="fa fa-angle-right ml-2 "></i> </span>').html_safe, destroy_user_session_path, method: :delete, class: 'nav-link'  %>
				            <% end %>
						</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- feature section start -->
<section class="features"> 
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="d-lg-flex">
					<div class="feature-item mb-5 mb-lg-0"> <!-- .feature-item -->
						<div class="feature-icon mb-4 "> <!-- .feature-item  -->
							<i class="fa fa-file-text-o "></i> 
						</div>
						<h4 class="mb-3">Fill Survey</h4> <!-- .feature-item h4 -->
						<p class="mb-4">Our website provides a daily surveys to keep us in touch. Filling this survey helps us determine your medical state.</p> <!-- .feature-item p -->
					</div>
					<div class="feature-item mb-5 mb-lg-0">
						<div class="feature-icon mb-4">
							<i class="fa fa-calendar"></i>
						</div>
						<h4 class="mb-3">Timing schedule</h4>
						<% if current_user and current_user.role == 0 %>
							<% if @can_do_new_survey %>
								<p class="my-3">You have a new survey to fill:</p>
								<a href="/surveys/new" class="btn btn-main-2 btn-icon mt-5 btn-round-full">Fill survey <i class="fa fa-angle-right ml-2 "></i></a>
							<% else %>
								<p class="mb-3">Time Of Your Next Survey:</p>
								 <h5 class="title-color"><%= @when_is_new_survey %></h5>
							<% end %>
						<% else %>
							<p class="mb-3 title-color">We schedule surveys timing precisely to make sure we keep in touch</p>
							<p class="mb-3">Scheduel of the dates and hours of next surveys.</p>
						</body>
						<% end %>
					</div>
					<div class="feature-item mb-5 mb-lg-0">
						<div class="feature-icon mb-4">
							<i class="fa fa-user-md"></i>
						</div>
						<span>Have a Question?</span>
						<h4 class="mb-3">Ask A Speciallist</h4>
						<p>Ask the questions you have to a specialist and get the most trusted answers.</p>
						<% if current_user and current_user.role == 0 %>
							<a href="/questions/new" class="btn btn-main-2 btn-icon btn-round-full">Ask question <i class="fa fa-angle-right ml-2 "></i></a>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- feature section end -->
