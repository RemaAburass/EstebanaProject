<!-- faq section -->
<div class="faq_area bg-light section_padding_80" id="faq">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-8 col-lg-6 mb-4 section_heading text-center">
                <!-- Section Heading-->
                <h1 class="title-color title-color">Frequently Asked Questions</h1><hr/>
            </div>
        </div>
        <div class="row justify-content-center">
            <!-- FAQ Area-->
            <div class="accordion accordion-flush" style=" width:80%" id="accordionFlushExample">
            	<% @faqs.each_with_index do |faq, index| %>
	            	<div class="accordion-item" style="border-color:#484848;">
	            		<h2 class="accordion-header" id="flush-headingOne<%= index %>">
	            			<button style="background-color:#D6DDE0;" class="accordion-button title-color collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne<%= index %>" aria-expanded="false" aria-controls="flush-collapseOne<%= index %>"><%= faq.content %>
	            			</button>
	            		</h2>
	            		<div id="flush-collapseOne<%= index %>" class="accordion-collapse collapse" aria-labelledby="flush-headingOne<%= index %>" data-bs-parent="#accordionFlushExample">
	            			<div class="title-color accordion-body"><%= Answer.where(question_id: faq.id).first.content %> </div>
	            		</div>
	            	</div>
            	<% end %>
            </div>
           <div class="row justify-content-center mt-4">
            <div class="col-12 col-sm-8 col-lg-6 mb-4 section_heading text-center">
                <!-- Section Heading-->
                <h6 class="mt-3 title-color">See more FAQs <a style="color: #223C60;" href="/faq">here</h6></a>
            </div>
        </div>
        </div>
    </div>
</div>
<!-- faq section end -->
