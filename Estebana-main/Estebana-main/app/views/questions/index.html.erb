<p id="notice"><%= notice %></p>
<body class="bg-ques">
  <section class="section container">
    <table class="table table-striped table-hover title-color mt-5 bg-white">
      <thead style="background-color:#223C60;" class="text-white text-center">
        <tr>
          <th>Subject</th>
          <th>Is faq</th>
          <th>Is private</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody class="title-color">
        <% @questions2.each do |question| %>
        <% if current_user and (current_user.role != 0 or question.user_id == current_user.id ) %>
          <tr>
            <td class="text-center title-color"><%= question.subject %></td>
            <td class="text-center title-color"><%= question.is_faq %></td>
            <td class="text-center title-color"><%= question.is_private %></td>
            <td>
              <div class="btn-group " role="group" aria-label="Basic example">
                <%= button_to 'Show ', question, method: :get, :class=>"btn-q btn-secondary" %>
                <% if current_user and (current_user.role != 0 or current_user.id == question.user_id) %>
                  <%= button_to 'Edit ', edit_question_path(question), method: :get, :class=>"btn-q btn-secondary"%>
                  <%= button_to 'Delete', question, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn-q btn-danger" %>
                <% end %>
              </div>
            </td>
          </tr>
        <%end%>
        <%end%>
        <% @questions.each do |question| %>
          <tr>
            <td class="text-center title-color"><%= question.subject %></td>
            <td class="text-center title-color"><%= question.is_faq %></td>
            <td class="text-center title-color"><%= question.is_private %></td>
            <td>
              <div class="btn-group " role="group" aria-label="Basic example">
                <%= button_to 'Show ', question, method: :get, :class=>"btn-q btn-secondary" %>
                <% if current_user and (current_user.role != 0 or current_user.id == question.user_id) %>
                  <%= button_to 'Edit ', edit_question_path(question), method: :get, :class=>"btn-q btn-secondary"%>
                  <%= button_to 'Delete', question, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn-q btn-danger" %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br/>
    <hr/>
    <br/>
    <div class="actions d-flex justify-content-center ">
      <%= link_to 'Have a new question?', new_question_path , :class => "btn btn-sign fa-md mb-3" %>
    </div>
  </section>
</body>
