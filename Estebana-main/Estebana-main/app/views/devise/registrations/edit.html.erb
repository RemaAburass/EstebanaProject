<%= resource_name.to_s.humanize %>
<body style="background-color: #eee;">
<section class="mt-5">
  <div class="container py-5 title-color">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="/welcome#index" class="title-color">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit Profile</li>
          </ol>
        </nav>
      </div>
    </div>
    <div class="row">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="col-lg-12">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="title-color mb-0">Full Name</p>
              </div>
              <div class="col-sm-9">
                  <%= f.text_field :name, autofocus: true, autocomplete: "name" , :class =>"form-control title-color" %>
              </div>
            </div>
          <hr>
          <div class="row">
              <div class="col-sm-3">
                <p class="mb-0 title-color">Email</p>
              </div>
              <div class="col-sm-9 ">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" , :class =>"form-control title-color" %>
              </div>
            </div>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0 title-color">Password</p>
              </div>
              <div class="col-sm-9 ">
                  <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
                  <%= f.password_field :password, autocomplete: "new-password" , :class =>"form-control" %>
                  <% if @minimum_password_length %>
                    <em><%= @minimum_password_length %> characters minimum</em>
                  <% end %>
              </div>
              <hr>
            </div>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0 title-color">Password Confirmation</p>
              </div>
              <div class="col-sm-9 ">
                 <%= f.label :password_confirmation %><br />
                 <%= f.password_field :password_confirmation, autocomplete: "new-password" , :class =>"form-control"  %>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0 title-color">Current Password</p>
              </div>
              <div class="col-sm-9 ">
                <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
                <%= f.password_field :current_password, autocomplete: "current-password", :class =>"form-control" %>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0 title-color">Gender</p>
              </div>
              <div class="col-sm-9">
                <%= f.label :gender, "Male", :value => 0, :class =>"title-color"  %>
                <%= f.radio_button :gender, true %>
                <%= f.label :gender, "Female", :value => 1, :class =>"title-color" %>
                <%= f.radio_button :gender, false, :checked => true %>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0 title-color">Phone Number</p>
              </div>
              <div class="col-sm-9">
                <%= f.text_field :phone_number, autofocus: true, placeholder: "+962700000000", :class =>"form-control title-color" %>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0 title-color">Date Of Birth</p>
              </div>
              <div class="col-sm-9">
                <%= f.date_field :date_of_birth, autofocus: true, autocomplete: "1/1/2022", :class =>"form-control title-color" %>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0 title-color">Address</p>
              </div>
              <div class="col-sm-9">
                <%= f.text_area :address, autofocus: true, autocomplete: "5th streat,Tabarbour,Amman,Jordan", :class =>"form-control title-color" %>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0 title-color">Medical History</p>
              </div>
              <div class="col-sm-9">
                <%= f.text_area :history, autofocus: true, autocomplete: "Diabetes", :class =>"form-control title-color" %>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0 title-color">Are you vaccinated</p>
              </div>
              <div class="col-sm-9">
                <%= f.label :vaccinated, "No", :value => 0, :class =>"title-color"  %>
                  <%= f.radio_button :vaccinated, false %>
                  
                  <%= f.label :vaccinated, "Yes", :value => 1, :class =>"title-color" %>
                  <%= f.radio_button :vaccinated, true%>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0 title-color">Date Of Last Vaccination</p>
              </div>
              <div class="col-sm-9">
                <%= f.date_field :vaccination_date, autofocus: true, autocomplete: "1/1/2022", :class =>"form-control title-color" %>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <div class="actions">
                  <%= f.submit "Update profile", :class => "btn btn-sign btn-block fa-lg mb-3 form-control" %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%end%>
    </div>
  </div>
</section>
</body>