<body style="background-color: #eee;">
  <section class="h-10 m-5">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4"> 
                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>
                    <h2 class="text-center">Sign Up</h2>
                    <div class="form-outline title-color mb-4">
                      <%= f.label :Name %><br />
                      <%= f.text_field :name, autofocus: true, placeholder: "name", :class =>"form-control title-color" %>
                    </div>
                    <div class="form-outline title-color mb-4">
                      <%= f.label :Email %><br />
                      <%= f.email_field :email, autofocus: true, placeholder: "email", :class =>"form-control title-color" %>
                    </div>
                    <div class="form-outline title-color mb-4">
                      <%= f.label :Password %>
                      <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %><br />
                      <%= f.password_field :password, placeholder: "new-password", :class =>"form-control title-color" %>
                    </div>
                    <div class="form-outline title-color mb-4">
                      <%= f.label :Password_confirmation %><br />
                      <%= f.password_field :password_confirmation, placeholder: "new-password", :class =>"form-control title-color" %>
                    </div>
                    <div class="form-outline title-color mb-4">
                      <%= f.label :Date_of_birth %><br />
                      <%= f.date_field :date_of_birth, autofocus: true, placeholder: "1/1/2022", :class =>"form-control title-color" %>
                    </div>
                    <div class="form-outline title-color mb-4">
                      <%= f.label :Phone_number %><br />
                      <%= f.text_field :phone_number, autofocus: true, placeholder: "0798888888",  :class =>"form-control title-color" %>
                    </div>
                    <div class="form-outline title-color mb-4">
                      <%= f.label :Gender %><br />
                      <%= f.label :gender, "Male", :value => 0, :class =>"title-color"  %>
                      <%= f.radio_button :gender, true %>
                      <%= f.label :gender, "Female", :value => 1, :class =>"title-color" %>
                      <%= f.radio_button :gender, false %>
                    </div>
                    <div class="form-outline title-color mb-4">
                      <%= f.label :Address %><br />
                      <%= f.text_area :address, autofocus: true, placeholder: "5th streat,Tabarbour,Amman,Jordan",  :class =>"form-control title-color" %>
                    </div>
                    <div class="form-outline title-color mb-4">
                      <%= f.label :Insert_your_infection_date %><br />
                      <%= f.date_field :infection_date, autofocus: true,  placeholder: "1/1/2022", :class =>"form-control title-color" %>
                    </div>
                    <div class="form-outline title-color mb-4">
                      <%= f.label :Do_you_have_any_medical_history_list_it %><br />
                      <%= f.text_area :history, autofocus: true, placeholder: "eg. Diabetes,difficulty breathing...", :class =>"form-control title-color" %>
                    </div>
                    <div class="form-outline title-color mb-4">
                      <%= f.label :are_you_vaccinated? %><br />
                      <%= f.label :vaccinated, "No", :value => 0, :class =>"title-color"  %>
                      <%= f.radio_button :vaccinated, false %>
                      
                      <%= f.label :vaccinated, "Yes", :value => 1, :class =>"title-color" %>
                      <%= f.radio_button :vaccinated, true %>
                    </div>
                    <div class="form-outline title-color mb-4">
                      <%= f.label :Insert_your_vaccination_date %><br />
                      <%= f.date_field :vaccination_date, autofocus: true, placeholder: "1/1/2022", :class =>"form-control title-color" %>
                    </div>
                    <div class="actions">
                      <%= f.submit "Sign up", :class => "btn btn-lg btn-sign btn-block fa-lg mb-3 form-control" %>
                    </div>
                  <% end %>
                  <%= render "devise/shared/links" %>
                  </div>
            </div>
            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
              <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                <div class="text-center">
                  <%= image_tag "covid2.png" %>
                </div>
                  <h1 class="mt-1 mb-5 pb-1 text-center" style="font-family: 'Acme', sans-serif;">Estebana</h1>
                <p class="small mb-0">We at estebana make sure to give you the care you deserve to go through your hard time, step by step to ensure that your safty remains on it's best.</p>
              </div>
            </div>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</body>